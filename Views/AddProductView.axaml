<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="InventoryApp.Views.AddProductView"
             MinWidth="900"
             Padding="10">

    <Grid ColumnDefinitions="2*,3*" RowDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="20">

        <!-- Title -->
        <TextBlock Text="Add Product"
                   FontSize="24" FontWeight="Bold"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

        <!-- Left: Product form -->
        <Grid Grid.Row="1" Grid.Column="0"
              ColumnDefinitions="Auto,150"
              RowDefinitions="Auto Auto Auto Auto Auto"
              RowSpacing="10" ColumnSpacing="10">

            <!-- ID -->
            <TextBlock Text="ID" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <TextBox Name="IdTextBox" IsEnabled="False" Grid.Row="0" Grid.Column="1" IsReadOnly="True" />

            <!-- Name -->
            <TextBlock Text="Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <TextBox Name="NameTextBox" Grid.Row="1" Grid.Column="1" />

            <!-- Inventory -->
            <TextBlock Text="Inventory" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <TextBox Name="InventoryTextBox" Grid.Row="2" Grid.Column="1" />

            <!-- Price -->
            <TextBlock Text="Price" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <TextBox Name="PriceTextBox" Grid.Row="3" Grid.Column="1" />

            <!-- Max/Min -->
            <TextBlock Text="Min" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Spacing="10">
                <TextBox Name="MinTextBox" Width="60" />
                <TextBlock Text="Max" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <TextBox Name="MaxTextBox" Width="60" />
            </StackPanel>
        </Grid>

        <!-- Right: Search, parts grids, buttons -->
        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="10">

            <!-- Search -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Search" Width="80" HorizontalContentAlignment="Center" Click="SearchPartButton_Click" />
                <TextBox Name="PartsSearchTextBox" Width="200" />
            </StackPanel>

            <!-- All candidate parts -->
            <TextBlock Text="All Candidate Parts" FontWeight="Bold" Margin="0,10,0,0" />
            <DataGrid Name="AllPartsDataGrid"
                      Height="150"
                      AutoGenerateColumns="True"
                      IsReadOnly="True" />

            <!-- Add button -->
            <Button Name="AddPartToProductBtn" Content="Add" Width="80" HorizontalAlignment="Right" HorizontalContentAlignment="Center"
                    Click="AddAssocPartButton_Click" />

            <!-- Associated parts -->
            <TextBlock Text="Parts Associated With This Product" FontWeight="Bold" Margin="0,10,0,0" />
            <DataGrid Name="AssociatedPartsDataGrid"
                      Height="150"
                      IsReadOnly="True"
                      AutoGenerateColumns="True" />

            <!-- Delete button -->
            <Button Name="DeletePartFromProductBtn" Content="Delete" Width="80" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Click="DeleteAssocPartButton_Click" />

            <!-- Save/Cancel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                <Button Content="Save" Width="80" HorizontalContentAlignment="Center" Click="AddProductSaveButton_Click" />
                <Button Content="Cancel" Width="80" HorizontalContentAlignment="Center" Click="AddProductCancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>