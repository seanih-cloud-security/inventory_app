<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="InventoryApp.Views.AddProductView"
             MinWidth="900"
             Padding="10">

    <Grid ColumnDefinitions="2*,3*" RowDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="20">
        
        <!-- Title -->
        <TextBlock Text="Add Product" 
                   FontSize="24" FontWeight="Bold" 
                   Grid.ColumnSpan="2" 
                   HorizontalAlignment="Left" 
                   Margin="0,0,0,20"/>

        <!-- Left: Product form -->
        <Grid Grid.Row="1" Grid.Column="0"
              ColumnDefinitions="Auto,150" 
              RowDefinitions="Auto Auto Auto Auto Auto" 
              RowSpacing="10" ColumnSpacing="10">

            <!-- ID -->
            <TextBlock Text="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="IdTextBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="Auto Gen"/>

            <!-- Name -->
            <TextBlock Text="Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="NameTextBox" Grid.Row="1" Grid.Column="1"/>

            <!-- Inventory -->
            <TextBlock Text="Inventory:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="InventoryTextBox" Grid.Row="2" Grid.Column="1"/>

            <!-- Price -->
            <TextBlock Text="Price:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="PriceTextBox" Grid.Row="3" Grid.Column="1"/>

            <!-- Max/Min -->
            <TextBlock Text="Max:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Spacing="10">
                <TextBox Name="MaxTextBox" Width="60"/>
                <TextBlock Text="Min:" VerticalAlignment="Center"/>
                <TextBox Name="MinTextBox" Width="60"/>
            </StackPanel>
        </Grid>

        <!-- Right: Search, parts grids, buttons -->
        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="10">
            
            <!-- Search -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Search" Width="80"/>
                <TextBox Name="SearchTextBox" Width="200"/>
            </StackPanel>

            <!-- All candidate parts -->
            <TextBlock Text="All Candidate Parts" FontWeight="Bold" Margin="0,10,0,0"/>
            <DataGrid Name="AllPartsDataGrid" 
                      Height="150" 
                      AutoGenerateColumns="True" />

            <!-- Add button -->
            <Button Content="Add" Width="80" HorizontalAlignment="Right"/>

            <!-- Associated parts -->
            <TextBlock Text="Parts Associated With This Product" FontWeight="Bold" Margin="0,10,0,0"/>
            <DataGrid Name="AssociatedPartsDataGrid" 
                      Height="150" 
                      AutoGenerateColumns="True" />

            <!-- Delete button -->
            <Button Content="Delete" Width="80" HorizontalAlignment="Right"/>

            <!-- Save/Cancel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Click="ModifySaveButton_Click"/>
                <Button Content="Cancel" Width="80" Click="ModifyCancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>