<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="InventoryApp.Views.AddPartView"
             Padding="10">

    <StackPanel Spacing="10">
        <TextBlock Text="Add Part" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <StackPanel Orientation="Horizontal" Spacing="20">
            <RadioButton Name="InHouseRadio" Content="In-House" IsChecked="True"/>
            <RadioButton Name="OutsourcedRadio" Content="Outsourced"/>
        </StackPanel>

        <!-- Keep the main form grid at 2 columns; rows 0..3 & 5 unchanged -->
        <Grid ColumnDefinitions="Auto,*"
              RowDefinitions="Auto Auto Auto Auto Auto Auto"
              RowSpacing="10" ColumnSpacing="10">

            <!-- Row 0: ID -->
            <TextBlock Text="ID:" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="PartIdTextBox" Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Left"/>

            <!-- Row 1: Name -->
            <TextBlock Text="Name:" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="NameTextBox" Grid.Row="1" Grid.Column="1" Width="200" HorizontalAlignment="Left"/>

            <!-- Row 2: Inventory -->
            <TextBlock Text="Inventory Level:" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="InventoryTextBox" Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left"/>

            <!-- Row 3: Price -->
            <TextBlock Text="Price/Cost:" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="PriceTextBox" Grid.Row="3" Grid.Column="1" Width="200" HorizontalAlignment="Left"/>

            <!-- Row 4: Max & Min on the SAME row -->
            <TextBlock Text="Min:" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <!-- Nested grid in column 1 to tightly pack MaxBox, Min label, MinBox -->
            <Grid Grid.Row="4" Grid.Column="1" ColumnDefinitions="120,Auto,120" ColumnSpacing="10">
                <TextBox Name="MinTextBox" Grid.Column="0" Width="120" HorizontalAlignment="Left"/>
                <TextBlock Text="Max:" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox Name="MaxTextBox" Grid.Column="2" Width="120" HorizontalAlignment="Left"/>
            </Grid>

            <!-- Row 5: Dynamic field -->
            <TextBlock Name="DynamicLabel" HorizontalAlignment="Right" Text="Machine ID:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="MachineIdOrCompanyNameTextBox" Grid.Row="5" Grid.Column="1" Width="200" HorizontalAlignment="Left"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
            <Button Content="Save" HorizontalContentAlignment="Center" Width="100" Click="SaveButton_Click"/>
            <Button Content="Cancel" HorizontalContentAlignment="Center" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>