<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="InventoryApp.Views.AddPartView"
             Padding="10">

    <StackPanel Spacing="10">
        <TextBlock Text="Add Part" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <StackPanel Orientation="Horizontal" Spacing="20">
            <RadioButton Name="InHouseRadio" Content="In-House" IsChecked="True"/>
            <RadioButton Name="OutsourcedRadio" Content="Outsourced"/>
        </StackPanel>

        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto Auto Auto Auto Auto Auto Auto" RowSpacing="10" ColumnSpacing="10">
            <TextBlock Text="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="IdTextBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="Auto Gen"/>

            <TextBlock Text="Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="NameTextBox" Grid.Row="1" Grid.Column="1"/>

            <TextBlock Text="Inventory Level:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="InventoryTextBox" Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Price/Cost:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="PriceTextBox" Grid.Row="3" Grid.Column="1"/>

            <TextBlock Text="Max:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="MaxTextBox" Grid.Row="4" Grid.Column="1"/>

            <TextBlock Text="Min:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="MinTextBox" Grid.Row="5" Grid.Column="1"/>

            <TextBlock Name="DynamicLabel" Text="Machine ID:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="DynamicTextBox" Grid.Row="6" Grid.Column="1"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>